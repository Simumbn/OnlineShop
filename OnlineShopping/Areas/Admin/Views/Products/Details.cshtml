@model OnlineShopping.Models.Products
@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info">Detail Product</h2>

<form asp-action="Details" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="col-8">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-7">
                    <input type="hidden" asp-for="ID" />
                    <input asp-for="Name" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-7">
                    <input asp-for="Price" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            @*<div class="form-group row">
            <div class="col-4">
                <label asp-for="Image"></label>
            </div>
            <div class="col-7">
                <input asp-for="Image" readonly="readonly" class="form-control" type="file" disabled />
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>*@
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-7">
                    <input asp-for="ProductColor" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Processor"></label>
                </div>
                <div class="col-7">
                    <input asp-for="Processor" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Processor" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Display"></label>
                </div>
                <div class="col-7">
                    <input asp-for="Display" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Display" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="RAM"></label>
                </div>
                <div class="col-7">
                    <input asp-for="RAM" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="RAM" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Storage"></label>
                </div>
                <div class="col-7">
                    <input asp-for="Storage" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Storage" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypeID"></label>
                </div>
                <div class="col-7">
                    <select asp-for="ProductTypeID" readonly="readonly" class="form-control" asp-items="ViewBag.ProductType" disabled></select>
                    @*<input asp-for="ProductTypeID" class="form-control" />*@
                </div>
                <span asp-validation-for="ProductTypeID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TagNameID"></label>
                </div>
                <div class="col-7">
                    <select asp-for="TagNameID" readonly="readonly" class="form-control" asp-items="ViewBag.TagName" disabled></select>
                    @*<input asp-for="TagNameID" class="form-control" />*@
                </div>
                <span asp-validation-for="TagNameID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-7">
                    <input asp-for="IsAvailable" readonly="readonly" type="checkbox" disabled />
                </div>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Quantity"></label>
                </div>
                <div class="col-7">
                    <input type="number" asp-for="Quantity" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning">Edit</a>
                <a asp-action="Index" class="btn btn-success">Back To List</a>
            </div>

        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="~/@Model.Image" width="100%" style="border-radius:5px;border:1px solid #808080 " />
        </div>

    </div>
</form>

@section Scripts
{
    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial.cshtml");}
}