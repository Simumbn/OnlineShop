@model OnlineShopping.Models.OrderDetails

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info">Details Product Type</h2>

<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="OrderID"></label>
            </div>
            <div class="col-5">
                <input asp-for="OrderID" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="OrderID" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Order.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Order.Name" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Order.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PorductID"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Name" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="PorductID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>

@section Scripts
{
    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial.cshtml");}
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
}

